<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ConstraintSet android:id="@+id/view_start">
        <Constraint
            android:id="@+id/view"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:visibilityMode="ignore" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/view_end">
        <Constraint
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </ConstraintSet>

    <Transition
        android:id="@+id/transition_start"
        app:constraintSetEnd="@id/view_end"
        app:constraintSetStart="@+id/view_start"
        app:motionInterpolator="linear" />

    <Transition
        android:id="@+id/transition_end"
        app:constraintSetEnd="@id/view_start"
        app:constraintSetStart="@+id/view_end"
        app:motionInterpolator="linear" />

</MotionScene>
